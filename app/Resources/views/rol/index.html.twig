{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rols list</h1>

    <table>
        <thead>
            <tr>
                <th>Nombrerol</th>
                <th>Idrol</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rol in rols %}
            <tr>
                <td><a href="{{ path('rol_show', { 'idRol': rol.idRol }) }}">{{ rol.nombreRol }}</a></td>
                <td>{{ rol.idRol }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('rol_show', { 'idRol': rol.idRol }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('rol_edit', { 'idRol': rol.idRol }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rol_new') }}">Create a new rol</a>
        </li>
    </ul>
{% endblock %}
